{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/login.html"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "echo 'No build required for Node.js app'",
  "outputDirectory": ".",
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}